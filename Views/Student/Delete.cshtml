@model WebApp.Models.Student

@{
    ViewBag.Title = "Delete";
}

<div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <h2>Delete Student</h2>
    <h4>Would you like to continue?</h4>
</div>

@using (Html.BeginForm())
{
    
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="container p-3 my-3 border">
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(obj => obj.RollNo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(obj => obj.RollNo)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(obj => obj.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(obj => obj.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(obj => obj.Department)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(obj => obj.Department)
                </dd>
            </dl>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button class="btn btn-danger" id="toastrDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("#toastrDelete").click(function () {
            swal({
                title: "Confirmation",
                text: ('@ViewBag.Delete'),
                type: 'error',
                showCancelButtonClass: "btn-danger",
                confirmButtonText: 'OK',
                closeOnConfirm: false,
                allowOutsideClick: false,
            });
            window.location.href = '@Url.Content("~/{Student}/{Index}/{params}")';
        });
    });
</script>

