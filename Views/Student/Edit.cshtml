@model WebApp.Models.Student

@{
    ViewBag.Title = "Edit";
}

<div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <h2>Edit Student</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <div class="form-group">
            @Html.LabelFor(obj => obj.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(obj => obj.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(obj => obj.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(obj => obj.Department, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(obj => obj.Department, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(obj => obj.Department, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-secondary" id="toastrEdit">Edit</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#toastrEdit").click(function () {
            swal({
                title: "Confirmation",
                text: ('@TempData["Edit"]'),
                type: 'info',
                showCancelButtonClass: "btn-secondary",
                confirmButtonText: 'OK',
                closeOnConfirm: false,
                allowOutsideClick: false
            });
        });
    });
</script>
