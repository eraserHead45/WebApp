@model IEnumerable<WebApp.Models.Student>

@{
    ViewBag.Title = "Index";
}

<style>
    .table {
        border-collapse: collapse;
        margin: 0;
        font-size: 0.9em;
        min-width: 400px;
        border-radius: 5px 5px 0 0;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 10);
    }

        .table thead tr {
            background-color: blueviolet;
            color: whitesmoke;
            text-align: left;
            font-weight: bold;
        }

        .table th,
        .table td {
            padding: 1px 50px;
        }

        .table tbody tr {
            border-bottom: 1px solid lightgrey;
        }

            .table tbody tr:nth-of-type(even) {
                background-color: lightgrey;
            }

            .table tbody tr:last-of-type {
                border-bottom: 2px solid blueviolet;
            }

            .table tbody tr.active-row {
                font-weight: bold;
                color: blueviolet;
            }
</style>

<div>
    <h2>
        Index
    </h2>
</div>

<p class="text-right">
    @*@Html.ActionLink("<i class='bi bi-person-plus-fill'></i> &nbsp;", "Create New", "Add")*@
    <a href="@Url.Action("Add", "Student")" class="btn btn-primary">
        <i class="bi bi-person-fill-add"></i>
        <span>
            Create New
        </span>
    </a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(obj => obj.RollNo)
        </th>
        <th>
            @Html.DisplayNameFor(obj => obj.Name)
        </th>
        <th>
            @Html.DisplayNameFor(obj => obj.Department)
        </th>
        <th></th>
    </tr>


    @if (Model != null && Model.Count() > 0)
    {
        foreach (var obj in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => obj.RollNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => obj.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => obj.Department)
                </td>
                <td>
                    <div class="w-auto btn-group" role="group">
                        <a href="@Url.Action("Edit", "Student",new {rollNo = obj.RollNo})" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-fill"></i>
                            <span>
                                Edit
                            </span>
                        </a>
                        <a href="@Url.Action("Delete", "Student",new {rollNo = obj.RollNo})" class="btn btn-danger mx-2">
                            <i class="bi bi-person-x-fill"></i>
                            <span>
                                Delete
                            </span>
                        </a>
                        @*@Html.ActionLink("Edit", "Edit", new { rollNo = obj.RollNo }, htmlAttributes: new { @class = "btn btn-primary mx-2" })
                        @Html.ActionLink("Remove", "Delete", new { rollNo = obj.RollNo }, htmlAttributes: new { @class = "btn btn-danger mx-2" })*@
                    </div>
                </td>
            </tr>

        }
    }
    else
    {
        <td colspan="4" class="text-center"><b>No Data Available . Please Add Data By Click On Create Button</b></td>

    }
</table>

